<!DOCTYPE html>
<html>
<head>
  <title>Online Book Store</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<%= @page_title || "Bookshelf" %>
	</div>
	<div id="columns">
		<div id="side">
			<div id="cart">
				<%= render @cart %>
			</div>

			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="/">Q&A</a></li>
				<li><a href="/">News</a></li>
				<li><a href="/">Contact</a></li>
			</ul>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
